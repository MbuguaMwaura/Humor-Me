<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:diagonal="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageChuck1"
        android:layout_width="match_parent"
        android:layout_height="229sp"
        android:src="@drawable/chuck2" />

    <RelativeLayout
        android:id="@+id/relay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50sp"
        android:layout_below="@id/imageChuck1"
        >


        <android.support.v7.widget.CardView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:id="@+id/cardChuck"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <TextView
                    android:id="@+id/chuck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Then we will create some Drawables that could be
                    used in your app and lastly for the grand finale we will try to
                    replicate a gradient as can be seen in the Spotify app/website."
                    android:textSize="20dp"

                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>




    </RelativeLayout>





</RelativeLayout>