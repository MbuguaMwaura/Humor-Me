<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:diagonal="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageChuck1"
        android:layout_width="match_parent"
        android:layout_height="229sp"
        android:src="@drawable/dadback"
        android:background="@color/white"/>

    <RelativeLayout
        android:id="@+id/relay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >


        <android.support.v7.widget.CardView
            android:layout_width="250sp"
            android:id="@+id/cardChuck"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            card_view:cardCornerRadius="30dp"
            android:layout_marginLeft="15dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >


                <TextView
                    android:id="@+id/chuck"
                    android:layout_width="259sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:text="Then we will create some Drawables that could be
                    used in your app and lastly for the grand finale we will try to
                    replicate a gradient as can be seen in the Spotify app/website."

                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>




    </RelativeLayout>



</RelativeLayout>