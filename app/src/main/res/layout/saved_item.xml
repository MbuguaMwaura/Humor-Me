<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:diagonal="http://schemas.android.com/tools">



    <RelativeLayout
        android:layout_marginTop="30sp"
        android:id="@+id/relay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:layout_centerHorizontal="true"
        >


        <android.support.v7.widget.CardView
            android:layout_width="350sp"
            android:id="@+id/card1"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            card_view:cardCornerRadius="10dp"
            android:layout_marginLeft="15dp"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:srcCompat="@drawable/ic_reorder_black_24dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="185dp"
                android:layout_margin="20sp"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/savedItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Then we will create some Drawables that could be
                    used in your app and lastly for the grand finale we will try to
                    replicate a gradient as can be seen in the Spotify app/website."
                    android:textSize="20dp"

                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>




    </RelativeLayout>



</RelativeLayout>