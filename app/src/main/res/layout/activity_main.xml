<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:diagonal="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    >

        <android.support.v7.widget.CardView
            android:layout_width="180sp"
            android:id="@+id/card1"
            android:layout_height="215dp"
            card_view:cardCornerRadius="30dp"
            android:layout_marginLeft="15dp"
            >

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="160dp"
                android:layout_height="210dp"
                android:orientation="vertical"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/imageTrump"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/trump" />
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRONALD DUMP"

                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="180sp"
        android:id="@+id/card2"
        android:layout_height="215dp"
        card_view:cardCornerRadius="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageChuck"
                android:layout_width="160dp"
                android:layout_height="192dp"
                android:src="@drawable/chuck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHUCK NORRIS" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card3"
        android:layout_width="362dp"
        android:layout_height="133dp"
        android:layout_below="@id/card1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        card_view:cardCornerRadius="30dp">


        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="132dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageDadJokes"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:src="@drawable/dadjokes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAD JOKES" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>

</RelativeLayout>